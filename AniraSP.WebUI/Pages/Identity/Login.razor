@page "/Login"
@layout LoginLayout
<div class="login-logo">
    <p>Login</p>
</div>
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Sign in to start your session</p>
        
        <EditForm Model="@LoginViewModel.LoginDto" OnValidSubmit="@LoginViewModel.LoginAsync">
            <div class="input-group mb-3">
                 <InputText @bind-Value="LoginViewModel.LoginDto.Login"  class="form-control" placeholder="Login"  />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user-astronaut"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <InputText @bind-Value="LoginViewModel.LoginDto.Password"  type="password" class="form-control" placeholder="Password"  />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <input type="checkbox" id="remember">
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </EditForm>
    </div>
    <!-- /.login-card-body -->
</div>